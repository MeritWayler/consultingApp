			<!-- START OF LOGIN MODAL -->
				<div id="loginModal" class="modal fade" role="dialog">
				  <div class="modal-dialog">

				    <!-- Modal content-->
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal">&times;</button>
				        <h4 class="modal-title">Iniciar Sesión</h4>
				      </div>
				      <div class="modal-body">
					    <%= form_for(:user, url: "/users/sign_in", method: :post) do |f| %>
						  <div class="field form-group">
						    <%= f.label :email%><br/> 
						    <%= f.text_field :email, autofocus: true, placeholder: "Email", required: true, class: "form-control" %>
						  </div>

						  <div class="field form-group">
						    <%= f.label :password %><br />
						    <%= f.password_field :password, placeholder: "Password", class: "form-control"%>
						  </div>

						    <div class="field form-group">
						      <%= f.check_box :remember_me %>
						      <%= f.label :remember_me %>
						    </div>

						  <div class="actions">
						    <%= f.submit "Iniciar Sesión" %>
						  </div>
						<% end %>
						<button type="button" class="btn btn-link" data-toggle="modal" data-target="#registrationModal" style="cursor: pointer; ">Registrarse</button>
 
				      </div>



				      <div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				      </div>
				    </div>
				  </div>
				</div

			

			<!-- START OF REGISTER MODAL -->
				<div id="registrationModal" class="modal fade" role="dialog">
				  <div class="modal-dialog">
				<!-- Modal content-->
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal">&times;</button>
				        <h4 class="modal-title">Registrarse</h4>
				      </div>
				      <div class="modal-body"> 
						<%= form_for(:user, as: :user, url: registration_path(:user)) do |f| %>
							  <div class="field form-group">
								  <%= f.label :Nombre %><br />
								  <%= f.text_field :first_name %>
							  </div>
							  <div class="field form-group">
							  	<%= f.label :Apellidos %><br />
							  	<%= f.text_field :last_name %>
							  </div>

							  <div class="field form-group">
							  	<%= f.label :email %><br />
							  	<%= f.email_field :email %>
							  </div>
							  
							  <div class="field form-group">
							  	<%= f.label :Teléfono%><br />
							  	<%= f.text_field :phone %>
							  </div>

							  <div class="field form-group">
							  	<%= f.label :RFC%><br />
							  	<%= f.text_field :rfc %>
							  </div>

							  <div class="field form-group">
							  	<%= f.label :password %><br />
							  	<%= f.password_field :password %>
							   </div>

							  <div class="field form-group">
							  	<%= f.label :password_confirmation %><br />
							  	<%= f.password_field :password_confirmation %>
							  </div>

							  <div class="field form-group">
							  	<%= f.submit "Registrarse" %>
							  </div>
							<% end %>
							
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				      </div>
				    </div>

				  </div>
				</div>
			<!-- END OF MODAL -->

