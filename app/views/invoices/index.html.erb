        <tr>
          <td><strong>Receptor:</strong></td>
          <td><%= @nombreReceptor %></td>
        </tr>
        <tr>
          <td><strong>RFC del Receptor:</strong></td>
          <td><%= @rfcReceptor %></td>
        </tr>
        <tr>
          <td><strong>subTotal:</strong></td>
          <td><%= @subtotal %></td>
        </tr>
        <tr>
          <td><strong>IVA:</strong></td>
